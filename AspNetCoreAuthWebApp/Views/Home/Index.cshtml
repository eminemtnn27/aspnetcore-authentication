
@{
    ViewData["Title"] = "Home page";
} 
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css"> 
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body>
    <div class="limiter"> 
        <div class="d-flex justify-content-center">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form action="/Login" method="post" class="login100-form validate-form">

                    <div class="wrap-input100 m-b-23 newuser" style="display:none" data-validate="Ad Soyad olmadan yeni kayıt açılamaz!!!">
                        <span class="label-input100">Ad Soyad</span>
                        <input class="input100" type="text" name="Username" placeholder="Ad soyadınızı yazın">
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 m-b-23 newuser" style="display:none" data-validate="Telefon olmadan yeni kayıt açılamaz!!!">
                        <span class="label-input100">Telefon</span>
                        <input class="input100" type="text" name="Telephone" placeholder="Telefon numaranızı yazın">
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-23" data-validate="Kullanıcı adı olmadan oturum açılamaz!!!">
                        <span class="label-input100">Kullanıcı Adı</span>
                        <input class="input100" type="text" name="LoginName" placeholder="Kullanıcı adınızı yazın">
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Parola olmadan oturum açılamaz!!!">
                        <span class="label-input100">Parola</span>
                        <input class="input100" type="password" name="Password" placeholder="Kullanıcı parolanızı yazın">
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>


                    <div class="wrap-input100 newuser" style="display:none">
                        <span class="label-input100">Parola Tekrarı</span>
                        <input class="input100" type="password" name="RePassword" placeholder="Parolanızı tekrar yazın">
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>

                    <div class="text-right p-t-8">
                        <a href="#" style="float: left;">
                            Yeni Kullanıcı!
                        </a>

                        <a href="#">
                            Şifre Hatırlat!
                        </a>
                    </div>

                    <div id="divhata" style="text-align: center;" class="text-danger p-t-20 p-b-20">
                        <h6 id="lbl_hata">Kullanıcı bilgisi ve/veya şifre hatalı!</h6>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn" style="border-radius:15px">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                oturum aç
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/animation/js/animation.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>

