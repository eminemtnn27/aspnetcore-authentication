  
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Hoşgeldin</h1>
    <div class="login-box">
        <form id="login" asp-action="Login" asp-controller="Home" method="post">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input   class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span   class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group mb-3">
                    <input   class="form-control" placeholder="Şifre" type="password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span   class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Kaydol</button>
                </div>
            </div>
        </form>
    </div> 
</div>

